# Development (local)
ASPNETCORE_ENVIRONMENT=Development
ASPNETCORE_URLS=http://localhost:5000
ConnectionStrings__Default=Host=localhost;Database=pm_dev;Username=postgres;Password=postgres

# JWT (use a long random string in real deployments)
JWT__Issuer=https://localhost
JWT__Audience=https://localhost
JWT__Key=dev-please-change-me-at-least-32-bytes-long

# AWS S3 (optional for this demo)
S3__Bucket=your-bucket
S3__Region=us-east-1
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key

# Logging
SERILOG__MINIMUMLEVEL=Information

# Frontend (local dev)
ANGULAR_BASE_HREF=/
API_BASE_URL=http://localhost:5000
SIGNALR_HUB_URL=http://localhost:5000/hubs/project

